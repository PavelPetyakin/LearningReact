{
  "compilerOptions": {
    "plugins": [],
    "target": "es6",
    "module": "es2015",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["."]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "./dist"]
}